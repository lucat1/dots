if [ -z "${DISPLAY}" ]; then
  sx
fi

set -o vi
set -o emacs # unfortunately, just to get history working

wd() {
  if [ "${PWD#$HOME}" != "$PWD" ]; then
    print -n "~${PWD#$HOME}"
  else
    print -n "$PWD"
  fi
}

export PS1="[37;1mâ–²[0m [34m\$(wd)[0m "

### exports
