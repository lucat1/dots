#!/bin/bash

SCREEN_WIDTH=$(xrandr --current | grep '*' | uniq | awk '{print $1}' | cut -d 'x' -f1)

SCREEN_HEIGHT=$(xrandr --current | grep '*' | uniq | awk '{print $1}' | cut -d 'x' -f2)

HEIGHT=64
WIDTH=320
MARGIN=20

OFFSET_X=$((SCREEN_WIDTH - $WIDTH - $MARGIN))
OFFSET_Y=$((SCREEN_HEIGHT - $HEIGHT - $MARGIN))

DESKTOP_COUNT=4

clock() {
  res=$(date "+%a %b %d, %H:%M")

  echo "%{c}%{F#000000}$res"
}

spit() {
  while true; do
    clock
    sleep 30
  done
}


spit | lemonbar -p -B#FFFFFF -g ${WIDTH}x${HEIGHT}+${OFFSET_X}+${OFFSET_Y} -f "Operator Mono:size=12"

