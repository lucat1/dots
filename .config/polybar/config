[colors]
background = ${env:BACKGROUND}
foreground = ${env:FOREGROUND}
background-alt = ${env:BG_1}

[bar/bar]
width = 100%
height = 22
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 0

border-bottom-size=2
border-color=${env:BG_1}

module-margin = 1

font-0 = "LigaOperatorMono Nerd Font:style=Book:antialias=true:pixelsize=13;3"
font-1 = "Dejavu Sans Mono:antialias=true:pixelsize=13;3"

modules-left = herbstluft cpu memory
modules-right = backlight alsa battery date

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label> 

[module/herbstluft]
type = custom/script

exec-if = ps -C herbstluftwm >/dev/null 2>&1
exec = herbstluft_tags
tail = true

[module/date]
type = internal/date
interval = 10

date =
date-alt = at %d/%m
time = %H:%M
time-alt = %H:%M:%S
label = %time% %date%

format-background = ${colors.background-alt}
format-padding = 2

[module/alsa]
type = internal/alsa
format-volume = " <label-volume> <ramp-volume> "
format-muted-suffix = " 婢"
label-muted = muted
ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳

format-volume-background = ${colors.background-alt}
format-volume-padding = 2
format-muted-background = ${colors.background-alt}
format-muted-padding = 2

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 95

format-charging = <label-charging>  
format-discharging = <label-discharging>  
format-full = 100%  

[module/cpu]
type = internal/cpu
interval = 5
format = "  <label>"
format-background = ${colors.background-alt}
format-padding = 2

[module/memory]
type = internal/memory
interval = 5
format = RAM <label>

[settings]
screenchange-reload = true

