{
  "position": "bottom",
  "height": 22,
  "modules-left": ["hyprland/workspaces"],
  "modules-center": [],
  "modules-right": ["hyprland/language", "network", "pulseaudio", "backlight", "battery", "clock"],
  "network": {
    "format-wifi": "",
    "format-ethernet": "󰈀",
    "format-disconnected": "",
    "on-click": "footclient -o font='monospace:size=12' -T <%+ ../../.var/internal/nmtui_window_title %> nmtui"
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰝟",
    "format-icons": ["", "", ""],
    "on-click": "foot -o font='monospace:size=12' -T <%+ ../../.var/internal/ncpamixer_window_title %> ncpamixer -c <%= $HOME %>/.config/ncpamixer.conf"
  },
  "backlight": {
    "format": " {percent}%"
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-charging": "󰂏 {capacity}%",
    "format-plugged": "󰁹 {capacity}%",
    "format-icons": [" ", " ", " ", " ", " "]
  },
  "clock": {
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  }
}
