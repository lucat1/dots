pkgname=sx
pkgver=2.1.3
pkgrel=0
pkgdesc="Start an xorg server"
url="https://github.com/Earnestly/sx"
arch="all"
license="MIT"
depends=""
depends_dev="xorg-server xauth"
makedepends=""
install=""
options="!check"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Earnestly/$pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

package() {
	make DESTDIR=$pkgdir PREFIX=/usr \
		-C "$builddir" install
}
