pkgname=xob
pkgver=0.2
pkgrel=0
pkgdesc="A lightweight overlay volume (or anything) bar for the X Window System."
url="https://github.com/florentc/xob"
arch="all"
license="MIT"
depends="libconfig"
depends_dev=""
makedepends="libx11-dev libconfig-dev"
install=""
options="!check"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/florentc/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

build() {
  make
}

package() {
	make DESTDIR=$pkgdir prefix=/usr \
		-C "$builddir" install
}
sha512sums="f1981bb04172c5453428ecbdab33cc22453d1336aaac54ff613b29924179533c040cc82e640f12f3c5d1753c227af010aee3ac725ff4fb22d64ba1b07692a97e  xob-0.2.tar.gz"
