pkgname=lemonbar-xft
pkgver=0
pkgrel=0
pkgdesc="bar ain't recursive"
url="https://github.com/freundTech/bar"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="libx11-dev libxinerama-dev libxft-dev"
install=""
options="!check"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/freundTech/bar/archive/xft-port.tar.gz"
builddir="$srcdir"/bar-xft-port


prepare() {
  ls -al
}

package() {
	make DESTDIR=$pkgdir PREFIX=/usr \
		-C "$builddir" install
}

