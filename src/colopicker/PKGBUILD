pkgname=colorpicker
pkgver=master
pkgrel=1
pkgdesc='Click on a pixel on your screen and print its color value in RGB. Written for X11.'
url='https://github.com/ym1234/colorpicker'
arch=('x86_64')
license=('MIT')
source=("${pkgname}-${pkgver}.zip::https://codeload.github.com/ym1234/colorpicker/zip/master")

build() {
  cd ${pkgname}-${pkgver}
  make colorpicker
}

package() {
  cd ${pkgname}-${pkgver}
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}
md5sums=('47ed77b950cb32b870a37cb5fc033535')
